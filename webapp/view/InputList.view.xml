<mvc:View
    controllerName="project1.controller.InputList"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="InputList"
        title="UI5 Mini Projects"
    >
        <Input
            id="productNameInput"
            placeholder="Enter Product name"
            value="{listModel>/currentProductName}"
            class = "sapUILargeMargin"
            submit="onEnterPress"
        />
        <List items="{listModel>/products}">
            <StandardListItem title="{listModel>productName}" />
        </List>
    </Page>
</mvc:View>
