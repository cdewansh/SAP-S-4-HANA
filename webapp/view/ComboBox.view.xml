<mvc:View xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="project1.controller.ComboBox"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="ComboBox" title="{i18n>title}">
        <core:Fragment fragmentName="project1.fragment.sideNavigation" type="XML" />
        <content>
        <ComboBox items = "{jsonData>/employees}" selectionChange="OnSelection" >
        <core:Item text="{jsonData>name}"></core:Item>
        </ComboBox>
        <form:SimpleForm visible="true" >
        <form:content>
        <Label text = "Id"></Label>
        <Text text="{employeeModel>/selectedEmployee/id}"></Text>
        <Label text = "Location"></Label>
        <Text text="{employeeModel>/selectedEmployee/location}"></Text>
        <Label text = "Designation"></Label>
        <Text text="{employeeModel>/selectedEmployee/designation}"></Text>
        <Label text = "Experience"></Label>
        <Text text="{employeeModel>/selectedEmployee/experience}"></Text>
        </form:content>
        </form:SimpleForm>
        </content>
    </Page>
</mvc:View>
